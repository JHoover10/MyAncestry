@page "/family-tree"

@inject IDataRepository dataRepository

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@OnResetClick">Reset</MudButton>

<MudPaper Class="pa-16 ma-2" Elevation="3">
    <Panzoom @ref="_panzoom" WheelMode="@WheelMode.ZoomWithWheel">
        <div @ref="@context.ElementReference" class="panzoom">
            <img style="width: 100%; height: 100%;" src="./images/Graphview.svg" alt="image" />
        </div>
    </Panzoom>
</MudPaper>

@code {

    private Panzoom _panzoom;

    private async Task OnResetClick(MouseEventArgs args) => await _panzoom.ResetAsync();
}